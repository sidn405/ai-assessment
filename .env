# MFS Literacy Platform Environment Variables
# Copy this file to .env and fill in your actual values

# OpenAI API Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here

# JWT Secret Key (generate with: python -c "import secrets; print(secrets.token_hex(32))")
SECRET_KEY=your-secret-key-for-jwt-tokens-change-in-production

# Optional: Database URL (default: sqlite:///mfs_literacy.db)
# For PostgreSQL: postgresql://user:password@localhost/mfs_literacy
# DATABASE_URL=sqlite:///mfs_literacy.db

# Optional: Port Configuration (default: 8000)
# PORT=8000
